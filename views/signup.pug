extends layout
block content
  .main 
    .container
      .main-left
      .main-middle.sign
        .subtext.sign Member Sign Up
        .sub-main-container.sign
          form(action="api/1.0/users/register", method="post")
            p ID for Sign In
            input.id(name="id" type="text" max=10 placeholder="ID for Sign In")
            p Password
            input.password(name="password" type="text" placeholder="Password")
            p Nickname
            input.name(name="name" type="text" placeholder="Nickname")
            p Cell Phone Number
            input.phone(type="tel", name="phone" placeholder="Cell Phone Number")
            p Email Address
            input.email(type="email", name="email" placeholder="Email Address")
            p Address
            input.address(type="text", name="address" placeholder="Address")
            .button-div
              button(type="submit") Register
          .button-div.sign
            button(type="button" onclick="location.href='/users/signin'") Sign In
      .main-right