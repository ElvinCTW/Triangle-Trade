extends layout
block content
  main
    .outer-container.main
      .inside-container.main.left
        .sub-container.main.left
      .inside-container.main.middle
        form(action="/api/1.0/items/new" method="post" id="add-items-form" enctype="multipart/form-data")
          .sub-container.main.middle
            .items-area.top
              h1.sub-title(id="item-add-subtitle") 新增物品
              .button-div
                button(type="button" id="add-items-btn") 上傳
            .items-area.add-item
              if successMsg
                .successMsgDiv=successMsg
              if errorMsg
                .successMsgDiv=errorMsg
              .new-item
                .content-div.outer
                  input(type="text" name="token" id="token-input" style="display:none;")
                  .select-area
                    input(type="text" style="display:none;" name="main_category" id="main_category_input" required)
                    .select-box.main-category(id="main_category")
                      span(id="main_category_text") 主分類   ▾
                      .outer-select-box(id="main_category_box")
                        .sub-select-box.main-category(id="main_category_list")
                    input(type="text" style="display:none;" name="sub_category" id="sub_category_input" required)
                    .select-box.sub-category(id="sub_category") 
                      span(id="sub_category_text") 次分類   ▾
                      .outer-select-box(id="sub_category_box")
                        .sub-select-box.sub-category(id="sub_category_list")
                          .option 請先選擇主分類
                    input(type="text" style="display:none;" name="status" id="status_input" required)
                    .select-box.status(id="status")
                      span(id="status_text") 商品狀態   ▾
                      .outer-select-box(id="status_box")
                        .sub-select-box.status(id="status_list")
                          .option 全新
                          .option 二手
                          .option 觀賞用
                  input.title(name="title" type="text" placeholder="標題" autocomplete="off" required maxlength="30")
                  input.tags(name="tags" type="text" placeholder="標籤" autocomplete="off" maxlength="40" onchange="tagsNormalization()" id="tags_input")
                  textarea.introduction(name="introduction" type="text" placeholder="簡介" value="yoyoyo")
                label(for="pics-input")
                  .picture-area.outer
                    input.pictures(type="file", name="pictures" accept="image/*" id="pics-input" multiple required hidden)
                    .picture-area.div
                      img(id="pic0" class="item-add-pictures")
                    .picture-area.div
                      img(id="pic1" class="item-add-pictures")
                    .picture-area.div
                      img(id="pic2" class="item-add-pictures")
                    .picture-area.div
                      img(id="pic3" class="item-add-pictures")
  script(src="/javascripts/items_add.js")